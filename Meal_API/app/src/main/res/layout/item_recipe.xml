<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background_item">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="22dp"
        android:paddingTop="5dp"
        android:gravity="center"
        android:id="@+id/titleview_name" />

    <ImageView
        android:id="@+id/imageview_name"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        app:layout_constraintTop_toBottomOf="@id/titleview_name" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="22dp"
        android:paddingTop="5dp"
        android:gravity="center"
        android:text="Ingredients"
        app:layout_constraintTop_toBottomOf="@id/imageview_name"
        android:id="@+id/ingredienttitleview_name" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="22dp"
        android:paddingTop="5dp"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        android:id="@+id/ingredientview_name"
        app:layout_constraintTop_toBottomOf="@id/ingredienttitleview_name"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="22dp"
        android:paddingTop="5dp"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        app:layout_constraintEnd_toEndOf = "parent"
        android:id="@+id/measureview_name"
        app:layout_constraintTop_toBottomOf="@id/ingredienttitleview_name"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="22dp"
        android:paddingTop="5dp"
        android:gravity="center"
        android:text="Instructions"
        app:layout_constraintTop_toBottomOf="@id/ingredientview_name"
        android:id="@+id/instructiontitleview_name" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="22dp"
        android:paddingTop="5dp"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        android:id="@+id/linkview_name"
        android:autoLink="web"
        app:layout_constraintTop_toBottomOf="@id/instructiontitleview_name"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="22dp"
        android:paddingTop="5dp"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        android:id="@+id/instructionview_name"
        app:layout_constraintTop_toBottomOf="@id/linkview_name"/>

</androidx.constraintlayout.widget.ConstraintLayout>