<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/background_item">

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/recycler_view" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="22dp"
        android:paddingTop="5dp"
        android:gravity="center"
        android:text="Meal API"
        android:id="@+id/titleview_name" />

    <ImageView
        android:id="@+id/imageview_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        app:layout_constraintTop_toBottomOf="@id/titleview_name" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="22dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:text="Try this recipe"
        android:drawablePadding="10dp"
        android:background="@drawable/roundbutton_item"
        app:layout_constraintBottom_toTopOf="@id/randomview_name"
        android:id="@+id/tryview_name" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="22dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_marginTop="400dp"
        android:gravity="center"
        android:text="Get random recipe"
        android:drawablePadding="10dp"
        android:background="@drawable/roundbutton_item"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/randomview_name" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="22dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="Explore categories"
        android:drawablePadding="10dp"
        android:background="@drawable/roundbutton_item"
        app:layout_constraintTop_toBottomOf="@id/randomview_name"
        android:id="@+id/exploreview_name" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="22dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="Explore areas"
        android:drawablePadding="10dp"
        android:background="@drawable/roundbutton_item"
        app:layout_constraintTop_toBottomOf="@id/exploreview_name"
        android:id="@+id/exploreareaview_name" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="22dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="Search by name"
        android:drawablePadding="10dp"
        android:background="@drawable/roundbutton_item"
        app:layout_constraintTop_toBottomOf="@id/exploreareaview_name"
        android:id="@+id/searchnameview_name" />

    <com.google.android.material.progressindicator.CircularProgressIndicator
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:indeterminate="true"
        android:indeterminateTint="@color/white"
        android:progressTint="@color/lightGrey"
        android:id="@+id/circular_progress_indicator" />

</androidx.constraintlayout.widget.ConstraintLayout>